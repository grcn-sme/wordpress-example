{
    "compilerOptions": {
        "module": "es2022",
        "target": "es2024",
        "moduleResolution": "bundler",
        "baseUrl": ".",
        "paths": {
            "/src/*": [
                "./src/*"
            ],
            "@/*": [
                "./src/*"
            ]
        },
    },
    "include": [
        "./src/**/*.js",
        "./src/**/*.mjs"
    ],
    "exclude": [
        "node_modules",
        "node_modules/*"
    ],
}